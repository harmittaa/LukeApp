<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:weightSum="10"
    >

    <ImageView
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/submissionImageMain"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        android:layout_width="0dp" />

    <TextView
        android:text="TextView, TextView, TextView, TextView, TextView, TextView, TextView, TextView, TextView, TextView, TextView, TextView, TextView, TextView, TextView, TextView, TextView, TextView, TextView, TextView, TextView, TextView, TextView, TextView, TextView, "
        android:layout_height="0dp"
        android:id="@+id/reportDescription"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline11"
        app:layout_constraintBottom_toBottomOf="@+id/submissionImageMain"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/submissionImageMain" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@android:drawable/btn_radio"
        android:layout_alignParentRight="true"
        android:id="@+id/popup_button_positive"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline9"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline7"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.602"
        tools:layout_editor_absoluteY="301dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline9"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="460dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.92" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline10"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50666666"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="152dp" />

    <android.support.constraint.Guideline
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline11"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.406"
        tools:layout_editor_absoluteY="203dp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/submissionSubmitterProfileImage"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reportDescription" />

    <TextView
        android:text="Name Here"
        android:layout_width="125dp"
        android:layout_height="26dp"
        android:id="@+id/submissionSubmitterName"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/reportDescription"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/submissionSubmitterProfileImage" />

    <TextView
        android:text="Rank Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submissionSubmitterRank"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/submissionSubmitterName"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/submissionSubmitterProfileImage" />

    <TextView
        android:text="01.01.2001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submissionDate"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:id="@+id/submissionCategoriesLinear"
        app:layout_constraintRight_toLeftOf="@+id/guideline10"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline12"
        android:layout_marginBottom="8dp"></LinearLayout>

    <ImageButton
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/submissionReportButton"
        app:layout_constraintRight_toRightOf="@+id/submissionImageMain"
        app:layout_constraintTop_toTopOf="@+id/submissionImageMain"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:srcCompat="@android:drawable/ic_dialog_alert"
        app:layout_constraintBottom_toTopOf="@+id/guideline12"
        android:layout_marginBottom="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline12"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.092"
        tools:layout_editor_absoluteY="46dp"
        tools:layout_editor_absoluteX="0dp" />


</android.support.constraint.ConstraintLayout>
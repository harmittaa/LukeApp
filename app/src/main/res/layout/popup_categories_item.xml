<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/popup_category_main_layout">

    <ImageView
        android:layout_width="78dp"
        android:layout_height="77dp"
        app:srcCompat="@drawable/no_category_image"
        android:id="@+id/popup_category_image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:focusable="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:text="@string/category_title"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/popup_category_title"
        android:layout_marginStart="8dp"
        android:focusable="false"
        app:layout_constraintLeft_toRightOf="@+id/popup_category_image"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="@string/category_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/popup_category_description"
        android:layout_marginStart="8dp"
        android:focusable="false"
        app:layout_constraintLeft_toRightOf="@+id/popup_category_image"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/popup_category_title" />

    <CheckBox
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popup_categories_checkbox"
        app:layout_constraintLeft_toLeftOf="@+id/popup_category_description"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintVertical_bias="0.32999998" />

</android.support.constraint.ConstraintLayout>
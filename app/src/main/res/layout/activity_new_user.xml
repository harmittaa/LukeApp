<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_new_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.luke.lukef.lukeapp.NewUserActivity">

        <EditText
            android:id="@+id/newUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:hint="Choose a username"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/guideline17"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline18"
            />

        <ImageView
            android:id="@+id/newUserDefaultImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline19"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline20"
            app:layout_constraintVertical_bias="0.56"
            app:srcCompat="@drawable/admin_marker"
            app:layout_constraintRight_toLeftOf="@+id/textView4"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/newUserCameraImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newUserDefaultImageView"
            app:srcCompat="@mipmap/take_photo"
            app:layout_constraintRight_toLeftOf="@+id/guideline21"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/newUserSocialMediaImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline22"
            app:srcCompat="@drawable/admin_marker"
            app:layout_constraintRight_toLeftOf="@+id/guideline21"
            android:layout_marginEnd="8dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline17"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="576dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline18"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="512dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline19"
            android:layout_width="384dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.56875"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="364dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline20"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3359375"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="215dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline21"
            android:layout_width="0dp"
            android:layout_height="640dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="0dp" />

        <RadioGroup
            android:id="@+id/radioGroupPicture"
            android:layout_width="48dp"
            android:layout_height="0dp"
            android:checkedButton="@+id/radioButtonDefault"
            app:layout_constraintBottom_toTopOf="@+id/guideline18"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline22">

            <RadioButton
                android:id="@+id/radioButtonSocial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/radioButtonDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/radioButtonCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </RadioGroup>

        <android.support.constraint.Guideline
            android:id="@+id/guideline22"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1046875"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="67dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Choose a profile picture"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toTopOf="@+id/newUserSocialMediaImageView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Default"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBottom_toTopOf="@+id/guideline19"
            app:layout_constraintHorizontal_bias="0.66"
            app:layout_constraintLeft_toLeftOf="@+id/guideline21"
            app:layout_constraintRight_toLeftOf="@+id/radioGroupPicture"
            app:layout_constraintTop_toTopOf="@+id/guideline20"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Social Media"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBottom_toTopOf="@+id/guideline20"
            app:layout_constraintLeft_toLeftOf="@+id/guideline21"
            app:layout_constraintRight_toLeftOf="@+id/radioGroupPicture"
            app:layout_constraintTop_toTopOf="@+id/guideline22"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Camera"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBottom_toTopOf="@+id/guideline18"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/guideline21"
            app:layout_constraintRight_toLeftOf="@+id/radioGroupPicture"
            app:layout_constraintTop_toTopOf="@+id/guideline19"
            android:textAlignment="center"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline17">

            <ImageButton
                android:id="@+id/newUserConfirmButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:text="Confirm"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/luke_tick" />
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>
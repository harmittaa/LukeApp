<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Take A Picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activateCameraButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/newSubmissionEditTextTitle"
        android:hint="Enter a title (optional)"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/activateCameraButton"
        app:layout_constraintLeft_toLeftOf="@+id/activateCameraButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/newSubmissionEditTextDescrption"
        android:hint="Write a description"
        app:layout_constraintLeft_toLeftOf="@+id/newSubmissionEditTextTitle"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/newSubmissionEditTextTitle" />

    <Button
        android:text="Choose categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCategory"
        app:layout_constraintLeft_toLeftOf="@+id/newSubmissionEditTextDescrption"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/newSubmissionEditTextDescrption"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:layout_weight="1"
        app:srcCompat="@drawable/center"
        android:id="@+id/photoThumbnail"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout3" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="192dp" />

    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/linearLayout3"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintRight_toLeftOf="@+id/photoThumbnail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline2">

    <org.osmdroid.views.MapView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/thumbnailmap"></org.osmdroid.views.MapView>
    </RelativeLayout>

    <android.support.constraint.Guideline
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40388006"
        tools:layout_editor_absoluteY="229dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_submit_test"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonCategory"
        app:layout_constraintTop_toTopOf="@+id/buttonCategory" />

</android.support.constraint.ConstraintLayout>